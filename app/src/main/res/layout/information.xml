<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="4dp">



        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/coloryellow"
        android:orientation="vertical">


        <ImageView

            android:id="@+id/ssssssssss"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/barg3" />
<ImageView
    android:id="@+id/image"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:rotation="180"
    android:foreground="@drawable/shape"
    android:layout_marginTop="150dp"/>

    <TextView
        android:id="@+id/ss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="155dp"
        android:layout_marginRight="8dp"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:text="عنوان"

        />

    <TextView
        android:id="@+id/ssss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="190dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="15dp"
        tools:text="اپلیکیشن کاربردی اندروید که توسط آن می توانید برنامه های موجود در گوشیتان را از حافظه گوشی به کارت حافظه انتقال بدهید. از ویژگی های نرم افزار AppMgr می توان به انتقال تک تک یا کلی برنامه ها از حافظه گوشی به کارت حافظه و برعکس، ایجاد لیستی از برنامه های قابل انتقال و غیر قابل انتقال، پنهان کردن نرم افزار هایی که تمایل ندارید دیگران ببینند، نمایش حافظه در دسترس و… اشاره کرد." />

</androidx.cardview.widget.CardView>
